<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Center_activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="40dp"
            android:gravity="center"
            android:id="@+id/text"
            android:text="MY_APPLICATION"/>

        <ImageButton
            android:id="@+id/att"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/attendance"

            />

        <ImageButton
            android:id="@+id/fee_record"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="-120dp"
            android:background="@drawable/fees" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/mark"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/marks2"
            />

        <ImageButton
            android:id="@+id/doubt"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="-120dp"
            android:background="@drawable/doubt" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/study_material"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/studymaterial"
            />

        <ImageButton
            android:id="@+id/discussion"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="-120dp"
            android:background="@drawable/discussion2" />
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/my_details"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/detalis"
            />

        <ImageButton
            android:id="@+id/learning"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="-120dp"
            android:background="@drawable/learning" />
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/about_us"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="140dp"
            android:background="@drawable/about_us"
            />

    </LinearLayout>
</ScrollView>